<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusTime3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_purple</item>
        <!-- Customize your theme here. -->
        <item name="colorSecondaryContainer">@color/light_purple</item>
    </style>

    <style name="BusTimingsToolbarStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/circularstd_black_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/circularstd_light_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChipTextStyle" parent="@style/Widget.Material3.Chip.Filter">
        <item name="android:fontFamily">@font/circularstd_bold_regular</item>
    </style>
</resources>